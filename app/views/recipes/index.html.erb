
<h1> Recipes List</h1>
<div class="recipeDiv">
<% @recipes.each do |recipe| %>
	<div class="recipe">
	<div class="recipe-header">
	  <p class="recipe_name"><%= link_to recipe.name, recipe_path(recipe) %></p>
	  <span class="Delete"><%= button_to "Remove", recipe_path(recipe.id), method: :delete, data: { confirm: "Are you sure?" } %></span>
	</div>
	<div class="recipe-content">
	  <p class="recipe-description"><%= recipe.description %></p>
	</div>
  </div>  
<% end %>

<%= link_to 'Add New Recipe', new_recipe_path, class: 'new-recipe-link' %>
</div>
